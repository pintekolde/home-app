{
  "short_name": "Home App",
  "name": "Smart Home Control App",
  "id": "/home-app/index.html",
  "description": "Smart home control application for managing your devices",
  "icons": [
    {
      "src": "/home-app/images/logo192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/home-app/images/logo512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "start_url": "/home-app/",
  "display": "standalone",
  "theme_color": "#2196f3",
  "background_color": "#ffffff",
  "orientation": "any",
  "scope": "/home-app/",
  "dir": "auto",
  "lang": "en-US",
  "display_override": ["window-controls-overlay"],
  "categories": ["utilities"],
  "screenshots": [
    {
      "src": "/home-app/images/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Home Screen"
    }
  ],
  "shortcuts": [
    {
      "name": "Home",
      "url": "/home-app/",
      "description": "Return to home screen"
    }
  ],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "file_handlers": [
    {
      "action": "/home-app/",
      "accept": {
        "application/json": [".json"]
      }
    }
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+home",
      "url": "/home-app/?url=%s"
    }
  ],
  "share_target": {
    "action": "/home-app/share",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
} 